<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="width: 25rem;">
    <h2 class="text-center mb-4">로그인</h2>
    <%= form_with(url: session_path, method: :post, class: "needs-validation", novalidate: true) do |form| %>
      <div class="mb-3">
        <%= form.label :email, '이메일', class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "이메일을 입력하세요" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, '비밀번호', class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "비밀번호를 입력하세요" %>
      </div>
      <div class="d-grid">
        <%= form.submit '로그인', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
