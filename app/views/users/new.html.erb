<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="width: 25rem;">
    <h2 class="text-center mb-4">회원가입</h2>
<%= form_with(model: @user, url: registration_path(@user), local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :email, '이메일', class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "이메일을 입력하세요" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, '비밀번호', class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "비밀번호를 입력하세요" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, '비밀번호 확인', class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "비밀번호를 다시 입력하세요" %>
  </div>

  <div>
    <%= form.submit '회원가입', class: "btn btn-primary w-100" %>
  </div>
<% end %>
  </div>
</div>
